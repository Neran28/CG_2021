CC=g++
CFLAGS=-c -Wall -std=c++17 -Wunreachable-code
LFLAGS=-lglfw -lGLEW -framework OpenGL -L../Utils -lutils 
# for linux use this line LFLAGS=-lglfw -lGLEW -lGL -L../Utils -lutils
LIBS=
INCLUDES=-I. -I../Utils


SRC = Camera.cpp IntersectableObject.cpp Intersection.cpp LightSource.cpp main.cpp Material.cpp Plane.cpp PointLight.cpp Ray.cpp Raytracer.cpp Scene.cpp Sphere.cpp Texture.cpp
OBJ = $(SRC:.cpp=.o)
TARGET = texturing

all: $(TARGET)

release: CFLAGS += -O3 -Os -flto -DNDEBUG
release: LFLAGS += -flto
release: $(TARGET)

../Utils/libutils.a:
	cd ../Utils && make

$(TARGET): $(OBJ) ../Utils/libutils.a
	$(CC) $(INCLUDES) $^ $(LFLAGS) $(LIBS) -o $@


%.o: %.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $^ -o $@

clean:
	-rm -rf $(OBJ) $(TARGET) core

mrproper: clean
	cd ../Utils && make clean
